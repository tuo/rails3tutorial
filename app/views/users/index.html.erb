<h1>Listing users</h1>
<%= will_paginate %>
<table class="table">
  <tr>
	<th>Avatar</th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= gravatar_for_user(user)%></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td>
    	<% if current_user.admin? && !current_user?(user)%>
			<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% else %>
		   <B>SUPER USER</B>
		<%end%>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate %>
